<% layout('layouts/boilerplate')%>

    <div class="card">
        <img src="https://images.unsplash.com/photo-1528938102132-4a9276b8e320?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8bm90ZWJvb2t8ZW58MHx8MHx8&auto=format&fit=crop&w=1267&q=80"
            alt="" style="width: 100%; height: 500px;">
    </div>
    <h1>My Notebooks</h1>

    <% for(let notebook of notebooks){ %>
        <% if(currentUser && notebook.author.equals(currentUser._id)) {%>
            <div class="card">
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= notebook.title %>
                        </h5>
                        <p class="card-text">
                            <%= notebook.note %>
                        </p>
                        <a class="btn btn-primary" href="/notebooks/<%= notebook.id %> "> View <%=notebook.title %> </a>
                    </div>
                </div>
            </div>
            <% } %>
                <% } %>